set clipboard=unnamedplus
set number
set shiftwidth=4
set tabstop=4 softtabstop=4
set expandtab
set smartindent
set guicursor=
set nohlsearch
set noerrorbells
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile
set incsearch
set termguicolors
set scrolloff=8
set signcolumn=yes

call plug#begin('~/.config/nvim/plugged')
    
" Git
Plug 'tpope/vim-fugitive'
   
" Syntax highlighting
Plug 'sheerun/vim-polyglot'
  
" Linter
Plug 'dense-analysis/ale'
 
" NERDTree
Plug 'preservim/nerdtree'

" Statusbar
Plug 'itchyny/lightline.vim'

" Finder
Plug 'junegunn/fzf', { 'do': { -> fzf#install() } }
Plug 'junegunn/fzf.vim'

" File finder
Plug 'vifm/vifm.vim'

" Theme
Plug 'morhetz/gruvbox'
   
"Plug 'ap/vim-buftabline'

call plug#end()

set background=dark
colorscheme gruvbox
